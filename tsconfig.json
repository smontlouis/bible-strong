{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "~assets/*": ["src/assets/*"],
      "~common/*": ["src/common/*"],
      "~features/*": ["src/features/*"],
      "~helpers/*": ["src/helpers/*"],
      "~navigation/*": ["src/navigation/*"],
      "~redux/*": ["src/redux/*"],
      "~themes/*": ["src/themes/*"],
      "~styled/*": ["src/styled/*"],
      "~themes": ["src/themes"],
      "~styled": ["src/styled"],
      "~i18n": ["i18n"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
